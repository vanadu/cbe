.devred {
  border: 1px solid red !important;
}
.devblue {
  border: 1px solid blue !important;
}
.devgreen {
  border: 1px solid green !important;
}
.devmag {
  border: 1px solid magenta !important;
}

*, ::before, ::after {
  border-width: 0;
  border-style: solid;
  border-color: #E5E7EB;
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
  'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
  sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

html {
  background-color: var(--primary_bg-color);
  color: var(--primary_text-color);
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
  overflow-y: scroll;
}

.App {
  position: relative;
  width: 100vw;
  text-align: center;
}

.header {
  position: absolute;
  width: 100%;
  height: 84px;
  z-index: 10;
  background: rgba(255, 0, 0, .3) !important; //devred
}

.semibold {
  font-weight: 600;
}

.header_container {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: .5rem;
  &:after {
    position: absolute; 
    top: 0; 
    left: 0;
    width: 100%; 
    height: 100%;
    background-image: linear-gradient(to bottom, #224E54 , #82A6AF);
    content: ''; 
    opacity: .6; 
    z-index: -1;
  }
}


.header_content {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  width: 100%; 
  // padding: .25rem 1rem .25rem .25rem;
  background-color: transparent;
}

.header_content--rule-bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 4px;
  margin: 0;
  padding: 0;
  border-width: 0;
  background-color: #222;
}

.header-spacer {
  height: 106px;
}

.branding {
  width: 250px;
  margin: 0;
  padding-bottom: .5;
  background-color: transparent;
}

.branding_head--content-text {
  margin: 0;
  padding: 0;
  background-color: transparent;
  font-family: var(--secondary_font);
  font-size: 1.438rem;
  font-weight: 400;
  letter-spacing: 0;
}

.branding_head--content-rule {
  height: 1px;
  margin: 0 .5rem;
  background-color: #000;
}

.branding_subhead--content-text {
  margin: 0;
  padding: 0;
  font-family: var(--mono_font);
  font-size: 1.125rem;
  font-weight: 400;
  letter-spacing: 0;
}


// NAVBAR - this is the parent of the mobile menu. It needs a width, which is modified in the media queries as appropriate for device. Display is block, changed to flex im MQ to set desktop menu position relative to .navbar container. The height of .navbar determines the vertical position of the desktop menu.
.navbar {
  display: block;
  width: 36px;
  height: 36px;
  margin: 0;
  padding: 0;
  // background: rgba(0, 0, 255, .3) !important; //devblue
}

// !VA Set display: block here, and display: none on +tablet. If this element is displayed 
.navbar_mobile--menu {
  display: block;
  width: 36px;
  margin: 0;
  padding: .5rem 0 0;
  // background: rgba(0, 0, 255, .3) !important; //devblue
}

.navbar_mobile--menu-icon {
  span {
    font-size: 2.25rem;
    line-height: 2.25rem;
  }
}

// !VA Hidden on mobile devices, so set all +tablet properties here and mod as necessary in MQs 
.navbar_desktop--menu-list {
  display: none;
  // !VA Position menu at bottom of .nav element
  align-items: flex-end;
  justify-content: space-between;
  width: 100%;
  // !VA height = height of .nav
  height: 100%;
  visibility: hidden;
  li {
    font-family: var(--secondary_font);
    font-size: 1.313rem;
    line-height: 1.75rem;
  }
  a {
    color: var(--primary-font);
    font-weight: 400;
    &:hover {
      color: var(--link-color) !important;
    } 
  }
}
 

.navbar_mobile--menu-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 32px;
  height: 32px;
  // padding: 2rem;
}

.navbar_desktop--menu-list-item  {
  &:hover {
    &:after {
      transition: opacity .25s; 
      border-bottom: 8px solid var(--primary_icon-color);
      opacity: 1;
    }
  }
  a {
    &:hover {
      color: #333;
    }

  }
  /* opacity: 1;
  transition: opacity .25s; 
  border-bottom: 8px solid var(--primary_icon-color); */
}


